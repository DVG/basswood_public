<legend><h1>Change Password</h1></legend>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal', :method => :put }) do |f| %>
  <%= f.error_notification %>
   <%= f.input :email, :required => true, :disabled => true %>
	 <%= f.input :current_password, :autofocus => true, :hint => "we need your current password to confirm your changes", :required => true %>
   <%= f.input :password, :autocomplete => "off", :required => false, :label => 'New Password' %>
   <%= f.input :password_confirmation, :required => false %>
 	<div class="form-actions">
   	<%= f.button :submit, "Update" %>
 	</div>
<% end %>